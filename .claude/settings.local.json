{
  "permissions": {
    "allow": [
      "mcp__serena__activate_project",
      "mcp__serena__find_symbol",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__list_dir",
      "mcp__serena__find_file",
      "mcp__serena__get_symbols_overview",
      "mcp__atlassian__getAccessibleAtlassianResources",
      "mcp__atlassian__getVisibleJiraProjects",
      "mcp__atlassian__getJiraProjectIssueTypesMetadata",
      "mcp__atlassian__getJiraIssueTypeMetaWithFields",
      "mcp__atlassian__createJiraIssue",
      "mcp__serena__write_memory",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git rm:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git remote:*)",
      "Bash(mkdir:*)",
      "Bash(git mv:*)",
      "Bash(if [ -d \"output\" ])",
      "Bash(then mv output backend/)",
      "Bash(fi)",
      "Bash(if [ -d \"temp\" ])",
      "Bash(then mv temp backend/)",
      "Bash(if [ -d \"data\" ])",
      "Bash(then mv data backend/)",
      "Bash(npm create:*)",
      "Bash(npm install)",
      "Bash(npm install:*)",
      "Bash(if [ -f \".env\" ])",
      "Bash(then cp .env backend/.env)",
      "Bash(else echo \".env 파일이 없습니다.\")",
      "Bash(uv run uvicorn:*)",
      "Bash(uv pip install:*)",
      "Bash(python -m venv hwp-report-generator)",
      "Bash(uv venv:*)",
      "Bash(uv run python:*)",
      "Bash(PYTHONIOENCODING=utf-8 uv run python:*)",
      "Bash(PYTHONIOENCODING=utf-8 uv run:*)",
      "Bash(uv run pytest:*)",
      "Bash(if [ ! -f \"backend/.CLAUDE.md\" ])",
      "Bash(then echo \"File does not exist\")",
      "Bash(else echo \"File exists\")",
      "mcp__serena__replace_symbol_body",
      "Read(//d/WorkSpace/hwp-report/**)",
      "mcp__atlassian__getTransitionsForJiraIssue",
      "Bash(if [ -f \"backend/templates/report_template.hwpx\" ])",
      "Bash(then echo \"File exists\")",
      "Bash(else echo \"File does not exist\")",
      "mcp__serena__list_memories",
      "mcp__atlassian__atlassianUserInfo",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_task_adherence",
      "Bash(if [ -f \"backend/.CLAUDE.md\" ])"
    ],
    "deny": [
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Read(node_modules/**)",
      "Edit(node_modules/**)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"New-Item -ItemType Directory -Force -Path $env:USERPROFILE\\.claude | Out-Null; Add-Content -Path $env:USERPROFILE\\.claude\\bash-command-log.txt -Value (Get-Date -Format o)\""
          }
        ]
      }
    ]
  },
  "outputStyle": "run_fastAPI"
}
